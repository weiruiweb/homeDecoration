<view class="contain">
	<view class="intention flexRowBetween">
		<view class="intention_s">
			意向强度:
		</view>
		<view class="intention_sort flexRowBetween">
			<block wx:for="{{purpose}}">
				<view class="intention_item" bindtap="purpose_choose" data-id="{{index}}">
					<view class="{{index == chooseId?'active':''}}">{{item.preX}}</view>
