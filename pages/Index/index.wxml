<!--index.wxml-->
<view class="section cityPosition">
  <block wx:for="{{web_labelData.info.data}}" wx:key="id">
    <view class="picker" data-index="{{index}}"   bindtap="spuChange">
      <image src="/images/map_icon.jpg"></image>
      <text >{{func.getArrayByTarget(item.child,'id',[web_spuItem[index]])[0]['title']}}></text>
    </view>
  </block>
  </view>
<view class="mainImage">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" >
    <block wx:for="{{web_sliderData.info.data[0].mainImg}}" wx:key="id">
      <swiper-item>
          <image src="{{item.url}}" />
      </swiper-item>
    </block>
  </swiper>
</view>
<view class="indexSort">
    <view class="sortModel" data-path="/pages/decorateService/decorateService" bindtap="intoPath">
      <view class="img_animate model1">
        <image src="/images/index_icon1.png" class="imageFirst"></image>
        <image src="/images/index_icon1_a.png"  class="imageTwo"></image>
      </view>
      <text>家装</text>
    </view>
     <view class="sortModel" data-path="/pages/furnitureService/furnitureService" bindtap="intoPath">
      <view class="img_animate model2">
        <image src="/images/index_icon2.png" class="imageFirst"></image>
        <image src="/images/index_icon2_a.png"  class="imageTwo"></image>
      </view>
      <text>家具</text>
    </view>
     <view class="sortModel">
      <view class="img_animate model3">
        <image src="/images/index_icon3.png" class="imageFirst"></image>
        <image src="/images/index_icon3_a.png"  class="imageTwo"></image>
      </view>
      <text>家电</text>
    </view>
    <view class="sortModel">
      <view class="img_animate model4">
        <image src="/images/index_icon4.png" class="imageFirst"></image>
        <image src="/images/index_icon4_a.png"  class="imageTwo"></image>
      </view>
      <text>智能家居</text>
    </view>
</view>
<view class="indexSort" >
    <view class="sortModel" bindtap="materials" style="margin-bottom:35rpx;" data-path="/pages/materials/materials" bindtap="intoPath">
      <view class="img_animate model5">
        <image src="/images/index_icon5.png" class="imageFirst"></image>
        <image src="/images/index_icon5_a.png"  class="imageTwo"></image>
      </view>
      <text>建材</text>
    </view>
     <view class="sortModel">
      <view class="img_animate model6">
        <image src="/images/index_icon6.png" class="imageFirst"></image>
        <image src="/images/index_icon6_a.png"  class="imageTwo"></image>
      </view>
      <text>软配</text>
    </view>
     <view class="sortModel">
      <view class="img_animate model7">
        <image src="/images/index_icon7.png" class="imageFirst"></image>
        <image src="/images/index_icon7_a.png"  class="imageTwo"></image>
      </view>
      <text>其他</text>
    </view>
    <view class="sortModel">
      <view class="img_animate model8">
        <image src="/images/index_icon8.png" class="imageFirst"></image>
        <image src="/images/index_icon8_a.png"  class="imageTwo"></image>
      </view>
      <text>敬请期待</text>
    </view>
</view>
<view class="container">
    <view class="indexGreat">
        <view class="great_title">
            <text>热门推荐</text>
            <text class="greatMore" data-path="/pages/animite/animite" bindtap="intoPath">更多 ></text>
        </view>
        <view class="great_list">
            <block wx:for="{{web_mainData}}"  wx:key="id">
              <view class="great_item" data-path="/pages/decorateDetail/decorateDetail?id={{item.id}}" bindtap="intoPath">
                <view class="great_caseImg">
                  <image src="{{item.mainImg[0].url}}"></image>
                </view>
                <view class="decorator">
                  <image src="/images/decorator.jpg"></image>
                  <text>{{item.title}}</text>
                </view>
              </view>
            </block>
        </view>
    </view>
    <view class="indexAbout">
        <view class="aboutitle">
            <text>关于我们</text>
            <image src="/images/kefu.jpg" ></image>
        </view>
        <view class="about_intro" data-path="/pages/aboutDetail/aboutDetail?id={{web_artData.id}}" bindtap="intoPath" style="margin-bottom:10rpx">
            <image src="{{web_artData.mainImg[0].url}}" ></image>
        </view>
    </view>
</view>

<view  class="c-state1 {{web_index>=0 ? 'c-state2' : ''}}"  >
  <view style="width:100%;height:auto;background:#fff;position:absolute;bottom:0">
    <image src="/images/close.png"  style="width:40rpx;height:40rpx;position:absolute;top:10rpx;right:10rpx;" data-index="10" bindtap="spuChange" />
    <block wx:for="{{web_labelData.info.data[web_index].child}}" wx:key="id">
      <view style="width:140rpx;height:60rpx;border:2rpx solid #ec514f;border-radius:10rpx;text-align:center;line-height:60rpx;color:#ec514f;font-size:30rpx;float:left;margin:10rpx 15rpx" data-id="{{item.id}}" bindtap="spuChange">{{item.title}}</view>
    </block>
  </view>
</view>
