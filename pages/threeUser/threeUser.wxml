<!--user.wxml-->
<view class="User_cont">
	<view class="user_top" bindtap="animite">
		<image src="/images/user_top1.jpg"></image>
		<view class="user_info">
			 <view class="userinfo-avatar">
		      <open-data  type="userAvatarUrl" style="width:150rpx;height:150rpx;"></open-data>
		    </view>
		    <view style="width:100%;height:40rpx;position:absolute;top:85%;text-align:center;font-size:16px;color:#fff">
     			<span><open-data  type="userNickName" ></open-data></span>
 			</view>
	    </view>
	</view>
	<view class="userInfo">
		<view class="user_list flexRowBetween" bindtap="intoPath" data-path="/pages/threeComplete/threeComplete">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon1.png"></image>
			</view>
		
			<text style="width:77%;align-items:center;">基本信息</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>
		<view class="user_list flexRowBetween" bindtap="intoPath" data-path="/pages/threeTeam/threeTeam">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon2.png"></image>
			</view>
		
			<text style="width:77%;align-items:center;">我的团队</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>
		
		<view class="user_list flexRowBetween next_item" bindtap="intoPath" data-path="/pages/threeClient/threeClient">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon3.png"></image>
			</view>
			<text style="width:77%;align-items:center;">客户记录</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>

		<view class="user_list flexRowBetween" bindtap="intoPath" data-path="/pages/threeCredits/threeCredits">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon4.png"></image>
			</view>
			<text style="width:77%;align-items:center;">积分记录</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>
		<view class="user_list flexRowBetween" bindtap="intoPath" data-path="/pages/threebackMoney/threebackMoney">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon5.png"></image>
			</view>
			<text style="width:77%;align-items:center;">佣金记录</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>
		
		<view class="user_list flexRowBetween next_item"bindtap="intoPath" data-path="/pages/threeQrcode/threeQrcode">
			<view style="width:8%;align-items:center;">
				<image src="/images/user_icon6.png"></image>
			</view>
			<text style="width:77%;align-items:center;">推广二维码</text>
			
			<view style="width:15%;text-align:right;">
				<image src="/images/next_icon1.jpg" class="next_page" ></image>
			</view>
		</view>
		
		<button class="submit_input" bindtap="removeStorageSync" style="margin-top:60rpx;width:300rpx">退出登录</button>
	</view>
</view>
